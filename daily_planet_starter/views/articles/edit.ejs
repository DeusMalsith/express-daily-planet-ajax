<h1>Edit Article</h1>

<form action="/articles/edit/<%= article.idx%>" id="edit-article" role="form">
  <div class="form-group">
    <label for="title" class="hidden">Title</label>
    <input type="text" class="form-control" value="<%= article.title%>" id="title" placeholder="Title" name="title">
  </div>

  <div class="form-group">
    <label for="body" class="hidden">Body</label>
    <textarea type="text" rows="5" cols="5" class="form-control" id="body" name="<%= article.body%>"><%= article.body%></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
